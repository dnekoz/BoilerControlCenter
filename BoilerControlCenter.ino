  timeClient.update();

  unsigned long epochTime = timeClient.getEpochTime();

  Ds1302::DateTime getDT;
  rtc.getDateTime(&getDT);
  
  String formattedTime = String(getDT.hour) + ":" + String(getDT.minute) + ":" + String(getDT.second);

  Serial.print("RTC: ");
  Serial.println(getDT.hour);
    
  tft.setCursor(0, 0);
  tft.drawRect(0,0, 160, 160, ILI9341_BLACK);
  tft.print(formattedTime);
  delay(1000);
}

